<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightWhite"
    android:orientation="vertical"
    tools:context="com.brioal.sourcecode.blogcommentlist.BlogCommentActivity">
    <!--标题栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">
        <!--返回按钮-->
        <ImageButton
            android:id="@+id/lib_comment_btn_close"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_close_white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="评论列表"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>
    </LinearLayout>
    <!--评论列表-->
    <in.srain.cube.views.ptr.PtrFrameLayout
        android:id="@+id/lib_comment_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <!--下拉刷新布局-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/lib_comment_iv_loading"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/ic_loading"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="正在加载"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>
        <!--数据显示列表-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/lib_comment_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorLightWhite">

        </android.support.v7.widget.RecyclerView>

    </in.srain.cube.views.ptr.PtrFrameLayout>
    <!--添加评论-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="10dp">

        <EditText
            android:id="@+id/lib_comment_et_comment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="写评论"/>

        <TextView
            android:id="@+id/lib_comment_btn_send"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/addblog_btn_bg"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:text="发送"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</LinearLayout>
